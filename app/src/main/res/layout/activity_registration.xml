<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_green"
        tools:context=".ui.signup.RegistrationActivity">

        <TextView
            android:id="@+id/tvHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvQuote1"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:fontFamily="@font/fredoka_one"
            android:text="@string/crypto"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_30" />

        <TextView
            android:id="@+id/tvQuote1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnLoginRegister"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:fontFamily="@font/averia_libre_bold"
            android:text="@string/quote1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />

        <Button
            android:id="@+id/btnLoginRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnSignupRegister"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/transparent_bg"
            android:padding="@dimen/dp_15"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textSize="@dimen/sp_17" />

        <Button
            android:id="@+id/btnSignupRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="50dp"
            android:background="@drawable/transparent_bg"
            android:padding="@dimen/dp_15"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textSize="@dimen/sp_17" />

    </RelativeLayout>
</layout>